{
  "name": "@repo/root",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo root",
  "type": "module",
  "scripts": {
    "build": "pnpm run -r build",
    "changeset": "changeset",
    "checkTypes": "tsgo -b --noEmit",
    "commit": "cz",
    "postinstall": "cp README.md packages/nanostores-data-layer/README.md",
    "lint": "run-s lint:cspell lint:es lint:oxfmt",
    "lint:cspell": "cspell --no-summary --no-progress",
    "lint:es": "eslint . --fix --report-unused-disable-directives --max-warnings 0",
    "lint:es:dry": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:oxfmt": "oxfmt --write --no-error-on-unmatched-pattern .",
    "lint:oxfmt:dry": "oxfmt --check --no-error-on-unmatched-pattern .",
    "prepare": "husky",
    "release": "changeset publish",
    "test": "vitest --passWithNoTests",
    "version-packages": "changeset version"
  },
  "dependencies": {
    "@repo/dts": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@repo/utils": "workspace:*",
    "@types/fs-extra": "catalog:",
    "fs-extra": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@changesets/cli": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@commitlint/types": "catalog:",
    "@total-typescript/ts-reset": "catalog:",
    "@types/lint-staged": "catalog:",
    "@typescript-eslint/utils": "catalog:",
    "@typescript/native-preview": "catalog:",
    "@vitest/browser-playwright": "catalog:",
    "@vp-tw/eslint-config": "catalog:",
    "@vp-tw/tsconfig": "catalog:",
    "commitizen": "catalog:",
    "cspell": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-package-json": "catalog:",
    "fast-glob": "catalog:",
    "husky": "catalog:",
    "jiti": "catalog:",
    "lint-staged": "catalog:",
    "npm-run-all2": "catalog:",
    "oxfmt": "catalog:",
    "pathe": "catalog:",
    "playwright": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef"
}
